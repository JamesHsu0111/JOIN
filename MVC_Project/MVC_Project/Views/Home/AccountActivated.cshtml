<script>
    $(document).ready(function () {
        var successMessage = '@Html.Raw(TempData["ActivationSuccess"])';
        if (successMessage && successMessage !== '') {
            Swal.fire({
                icon: 'success',
                title: successMessage,
                confirmButtonColor: '#3085d6',
                confirmButtonText: '確定'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Home/Login";  // 導航到 Login 頁面
                }
            });
        }
    });
</script>
